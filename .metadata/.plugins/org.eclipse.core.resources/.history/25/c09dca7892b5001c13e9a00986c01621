import java.util.Scanner;

public class sampleuserinput3 {

	public static void main(String[] args) {
		System.out.println("Enter the Size");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
//////////////////////////////////////////////A
		for(int i=0;i<n;i++) {
			for(int j=0;j<n;j++) {
				if(j==0&&i>=(n/2) || i+j==(n/2) || j-i==(n/2) || j==(n-1)&&i>=(n/2) || i==(n/2)) {
					System.out.print("*");
				}
				else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
